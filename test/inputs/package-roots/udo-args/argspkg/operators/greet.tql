---
description: "Greet someone with a custom message"
args:
  positional:
    - name: person
      type: string
      description: "Name of the person to greet"
    - name: age
      type: int
      description: "Age of the person"
  named:
    - name: prefix
      type: string
      default: "Hello"
      description: "Greeting prefix"
    - name: excited
      type: bool
      default: false
      description: "Use exclamation mark"
---
from {
  greeting: $prefix,
  name: $person,
  age: $age,
  excited: $excited
}
write_json
save_stdout
